<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>Common utilities, such as converters and DPI handing for WPF applications.</Description>
		<AssemblyVersion>2.0.0.0</AssemblyVersion>
		<Version>2.0.0</Version>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows;net48</TargetFrameworks>
		<RootNamespace>AnakinRaW.CommonUtilities.Wpf</RootNamespace>
		<AssemblyName>AnakinRaW.CommonUtilities.WPF.Core</AssemblyName>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<PropertyGroup>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Sklavenwalker.CommonUtilities" Version="2.1.1" />
		<PackageReference Include="Validation" Version="2.5.51" PrivateAssets="all"/>
		<PackageReference Include="System.Collections.Immutable" Version="7.0.0" PrivateAssets="all"/>
		<PackageReference Include="Vanara.PInvoke.Gdi32" Version="3.4.12" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.SHCore" Version="3.4.12" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.Shell32" Version="3.4.12" PrivateAssets="all" />
		<PackageReference Include="Vanara.PInvoke.User32" Version="3.4.12" PrivateAssets="all" />
	</ItemGroup>
	
</Project>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vs="clr-namespace:Sklavenwalker.CommonUtilities.Wpf.DPI"
                    xmlns:controls="clr-namespace:Sklavenwalker.CommonUtilities.Wpf.Controls">
    <Style TargetType="{x:Type controls:ModalWindow}" BasedOn="{StaticResource {x:Type Window}}">
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="{x:Static vs:DpiHelper.BitmapScalingMode}"/>
    </Style>
</ResourceDictionary>
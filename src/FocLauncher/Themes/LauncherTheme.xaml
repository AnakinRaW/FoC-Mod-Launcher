<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:colors="clr-namespace:Sklavenwalker.CommonUtilities.Wpf.Themes.Colors;assembly=Sklavenwalker.CommonUtilities.WPF.Controls"
                    xmlns:themes="clr-namespace:FocLauncher.Themes">

    <SolidColorBrush x:Key="{x:Static colors:WindowColors.MainWindowActiveCaptionText}" Color="#FFFFFFFF"/>
    
    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.MainWindowText}" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.AboutWindowPackagesText}" Color="#FF7A7A7A"/>

    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.UpdateProductBackground}" Color="#FF2E2E2E"/>
    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.UpdateProductBorder}" Color="#FF707070"/>
    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.UpdateInfoBarBackground}" Color="#FF181818"/>
    <SolidColorBrush x:Key="{x:Static themes:LauncherColors.UpdateInfoBarBorder}" Color="#FF181818"/>

</ResourceDictionary>